# abort script on any command that exits with a non zero value
set -e
NUM_JOBS=$(( $(getconf _NPROCESSORS_ONLN) + 1 ))

tar xf pdns/pdns-4.1.8.tar.bz2
cd pdns-4.1.8/
export CPPFLAGS="-I/var/vcap/packages/boost/include"
export LDFLAGS="-L/var/vcap/packages/boost/lib/"
./configure --prefix=$BOSH_INSTALL_TARGET --disable-mysql --with-modules="bind random gpgsql"
make -j $NUM_JOBS
make install
